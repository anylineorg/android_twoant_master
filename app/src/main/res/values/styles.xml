    <style name="TakePhotoToolbarTheme" parent="AiSouAppTheme">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/whiteTextColor</item>
        <item name="actionMenuTextColor">@color/whiteTextColor</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:color">@color/whiteTextColor</item>
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
