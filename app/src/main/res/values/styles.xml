        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@drawable/yh_menu_white_bg_arc</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:dropDownVerticalOffset">@dimen/px_20</item>
