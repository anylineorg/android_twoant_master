    <style name="ThemeLightDialog.X">
        <item name="android:windowAnimationStyle">@style/DialogStyle_X</item>
    </style>

    <style name="ThemeLightDialog.Y">
        <item name="android:windowAnimationStyle">@style/DialogStyle_Y</item>
    </style>

    <!-- 对话框样式 -->
