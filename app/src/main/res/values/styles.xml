        <!-- 退出时的动画 -->
        <item name="android:windowExitAnimation">@anim/yh_dialog_y_exit</item>
    </style>


    <!-- 弹出框动画 由下至上 -->
    <style name="DialogStyle_X" parent="Animation.AppCompat.Dialog">
        <!-- 进入时的动画 -->
        <item name="android:windowEnterAnimation">@anim/yh_dialog_x_enter</item>
        <!-- 退出时的动画 -->
