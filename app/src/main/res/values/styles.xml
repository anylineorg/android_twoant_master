    <!--交流中心的样式-->
    <style name="AiSouAppTheme.ChatTheme">
        <item name="android:actionMenuTextColor">@color/whiteTextColor</item>
    </style>

    <style name="AiSouAppTheme.SelectLocation">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:actionMenuTextColor">@color/whiteTextColor</item>
        <item name="actionMenuTextColor">@color/whiteTextColor</item>
        <item name="android:textColorHint">@color/subordinationContentTextColor</item>
