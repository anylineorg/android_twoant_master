        <item name="android:textColor">@color/principalTitleTextColor</item>
    </style>


    <style name="GreyWindowBackgroundTheme" parent="AiSouAppTheme">
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="AiSouAppTheme.WhiteWindowBackground">
        <item name="android:windowBackground">@color/whiteBgColor</item>
    </style>

    <!---->
    <style name="TransparentWindowBg" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDeep</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
