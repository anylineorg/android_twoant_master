<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_130">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_centerVertical="true"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:text="Large Text"
             android:layout_marginTop="@dimen/px_20"
             android:id="@+id/sort_name"
             android:paddingLeft="10dp"
             android:textSize="@dimen/px_text_32"
             android:textColor="@color/principalTitleTextColor"
             android:layout_alignParentTop="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Large Text"
             android:textSize="@dimen/px_text_28"
             android:id="@+id/time"
             android:textColor="@color/subordinationContentTextColor"
             android:paddingLeft="10dp"
             android:layout_marginTop="6dp"
             android:layout_below="@id/sort_name" />
     </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="@color/red_f9"
            android:paddingRight="10dp"
            android:id="@+id/price"
            android:textSize="@dimen/px_text_34"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
