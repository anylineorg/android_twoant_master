<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/face_viewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"></android.support.v4.view.ViewPager>

    <net.twoant.master.widget.emoji.EmojiIndicatorView
        android:id="@+id/face_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal">
    </net.twoant.master.widget.emoji.EmojiIndicatorView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="170dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/face_recent"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/face_recently"
            android:textColor="#9E9E9E"
            android:background="@drawable/selector_face_text"/>
        <TextView
            android:id="@+id/face_first_set"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/face_set_one"
            android:textColor="#9E9E9E"
            android:background="@drawable/selector_face_text"/>
        <View
            android:id="@+id/fill_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_face_text"/>
    </LinearLayout>

</FrameLayout>