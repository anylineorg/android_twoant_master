<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteBgColor"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_20"
        android:text="@string/select_location"
        android:textColor="@color/principalTitleTextColor"
        android:textSize="@dimen/px_text_28" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_address_header_popup_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_address"
        android:drawablePadding="@dimen/px_20"
        android:drawableStart="@drawable/ic_address"
        android:gravity="center_vertical"
        android:lines="1"
        android:padding="@dimen/px_20"
        android:textColor="@color/subordinationTitleTextColor"
        android:textSize="@dimen/px_text_24"
        tools:text="黄岛区" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_wheel_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">


        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/main_wheel_left"
            android:layout_width="0dp"
            android:padding="@dimen/px_2"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="false"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_size="@dimen/px_2"
            aigestudio:wheel_indicator_color="@color/subordinationContentTextColor"
            aigestudio:wheel_item_align="center"


            aigestudio:wheel_item_text_color="@color/subordinationContentTextColor"
            aigestudio:wheel_item_text_size="@dimen/px_text_30"
            aigestudio:wheel_selected_item_text_color="@color/entered_merchant_text"
            aigestudio:wheel_visible_item_count="5" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/main_wheel_center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_2"
            android:background="@android:color/transparent"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="false"
            aigestudio:wheel_cyclic="false"

            aigestudio:wheel_indicator_size="@dimen/px_2"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="@color/subordinationContentTextColor"
            aigestudio:wheel_item_align="center"


            aigestudio:wheel_item_text_color="@color/subordinationContentTextColor"
            aigestudio:wheel_item_text_size="@dimen/px_text_30"
            aigestudio:wheel_selected_item_text_color="@color/entered_merchant_text"
            aigestudio:wheel_visible_item_count="5" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/main_wheel_right"
            android:layout_width="0dp"
            android:padding="@dimen/px_2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="false"

            aigestudio:wheel_indicator_size="@dimen/px_2"
            aigestudio:wheel_cyclic="false"
            aigestudio:wheel_indicator="true"
            aigestudio:wheel_indicator_color="@color/subordinationContentTextColor"

            aigestudio:wheel_item_align="center"
            aigestudio:wheel_item_text_color="@color/subordinationContentTextColor"
            aigestudio:wheel_item_text_size="@dimen/px_text_30"
            aigestudio:wheel_selected_item_text_color="@color/entered_merchant_text"
            aigestudio:wheel_visible_item_count="5" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm_popup_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_20"
        android:background="@drawable/yh_orange_bg_btn_press"
        android:text="@string/confirm_location"
        android:textColor="@color/whiteTextColor"
        android:textSize="@dimen/px_text_28"
        android:textStyle="bold" />

</android.support.v7.widget.LinearLayoutCompat>