<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightGreyColor"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/btnTextColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_goodsmanager"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/gray_arrow" />

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的商品"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_publish_goodsmanager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/title_color"
            android:textSize="18sp" />
    </RelativeLayout>


    <ListView
        android:layout_marginTop="7dp"
        android:background="@color/btnTextColor"
        android:id="@+id/listView_swipe_goods"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>