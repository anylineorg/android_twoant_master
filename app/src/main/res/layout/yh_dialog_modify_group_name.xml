<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/til_input_parent"
        android:layout_width="match_parent"
        app:counterMaxLength="30"
        android:paddingTop="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_20"
        app:counterEnabled="true"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_input_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:textColor="@color/principalTitleTextColor"
            android:paddingTop="@dimen/px_20"
            android:minHeight="@dimen/px_60"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:textSize="@dimen/px_text_26" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_modify_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yh_btn_press_orange"
            android:drawableEnd="@drawable/yh_line_chat_popup_window"
            android:drawableRight="@drawable/yh_line_chat_popup_window"
            android:text="@string/chat_cancel_login"
            android:textColor="@color/whiteTextColor"
            android:textSize="@dimen/px_text_26" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_modifiy_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yh_btn_press_orange"
            android:text="@string/info_modify"
            android:textColor="@color/whiteTextColor" />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>