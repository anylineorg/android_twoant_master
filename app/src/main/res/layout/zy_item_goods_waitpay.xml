<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/px_16"
    android:background="@color/backgroundColor1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_150">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_goodsimg_postorder"
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_120"
        android:scaleType="centerCrop"
        tool:background="@drawable/em_splash"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_price_waitpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_text_32"
                android:layout_marginRight="@dimen/px_10"
                tool:text="¥12.0"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_toLeftOf="@id/tv_price_waitpay"
                android:id="@+id/tv_goodsname_waitpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="@dimen/px_text_32"
                android:textColor="@color/text_black"
                tool:text="韩版热气是飒"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_detail_waitpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_black"
            tool:text=""/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_num_waitpay"
                android:textSize="@dimen/px_text_26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_10"
                android:layout_alignParentRight="true"
                tool:text="x1"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>