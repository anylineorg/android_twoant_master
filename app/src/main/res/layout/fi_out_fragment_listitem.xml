<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/px_6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_110">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tx_name"
            android:id="@+id/tx_name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/px_text_30"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/subordinationTitleTextColor"
            android:textSize="@dimen/px_text_30"
            android:id="@+id/tx_time"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tx_name"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tx_name"
            android:id="@+id/tx_price"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/px_text_30"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/subordinationTitleTextColor"
            android:textSize="@dimen/px_text_30"
            android:id="@+id/tx_tip"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tx_name"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</LinearLayout>
