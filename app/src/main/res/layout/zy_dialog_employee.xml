<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteBgColor">

    <TextView
        android:layout_marginTop="@dimen/px_16"
        android:padding="@dimen/px_6"
        android:textSize="@dimen/px_text_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解聘"
        android:textColor="@color/principalTitleTextColor"
        android:gravity="center"/>


    <TextView
        android:layout_marginTop="@dimen/px_0"
        android:padding="@dimen/px_6"
        android:textSize="@dimen/px_text_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/subordinationTitleTextColor"
        android:text="确定解聘此名管理员？"
        android:gravity="center"/>

        <View
            android:layout_marginTop="@dimen/px_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/cardview_shadow_start_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dismiss_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="点错了"
            android:gravity="center"
            android:textColor="@drawable/zy_selector_text_administer"
            android:padding="@dimen/px_16"
            android:textSize="@dimen/px_text_28"/>
        <View
            android:layout_width="@dimen/px_2"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_start_color"/>
        <TextView
            android:id="@+id/tv_enter_employee"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@drawable/zy_selector_text_administer"
            android:padding="@dimen/px_16"
            android:textSize="@dimen/px_text_28"/>
    </LinearLayout>



</LinearLayout>