<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/lightGreyColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btnTextColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/gray_arrow" />

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品评价"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="20sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/title_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/lightGreyColor"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/btnTextColor"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ib_product_manager" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="商品"
                    android:textSize="20sp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">


                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_4"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ib_activity_manager"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="活动"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_guanliyuan"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">


                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_admin"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ib_addmanager_manager"
                    />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="管理员"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_order"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ib_order_manager"
                    />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="订单"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/btnTextColor"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">


                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_classify"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ib_classify_manager" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="分类"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/textView33" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_6"
                    android:id="@+id/ib_finance_manager"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="财务"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:id="@+id/textView80" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_8"
                    android:id="@+id/ib_safe_manager"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="认证"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:id="@+id/textView86" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/guanli_7"
                    android:id="@+id/ll_shoukuan1"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/principalTitleTextColor"
                    android:text="信息"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
