<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/yh_tab_select_white_orange">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_tab_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:enabled="false"
        android:gravity="center"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:textColor="@color/whiteTextColor"
        android:textSize="@dimen/px_text_24"
        tools:text="聊天" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_mess_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/px_3"
        android:layout_marginEnd="@dimen/px_6"
        android:layout_marginRight="@dimen/px_6"
        android:button="@drawable/yh_circle_point_tab_mess_hint"
        android:checked="true"
        android:clickable="false"
        android:visibility="gone" />

</android.support.v7.widget.ContentFrameLayout>