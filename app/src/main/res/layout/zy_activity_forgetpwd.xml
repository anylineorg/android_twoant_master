<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_color">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_back"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="重置登录密码"
                android:id="@+id/textView9"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/btnTextColor" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="手机号"
                android:id="@+id/textView10"
                android:textColor="@color/principalTitleTextColor"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_phone"
                android:background="@null"
                android:layout_marginLeft="35dp"
                android:hint="请输入您的手机号"
                android:textColorHint="#999999"
                android:textColor="@color/principalTitleTextColor"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="11"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_code"
                android:layout_marginLeft="@dimen/px_20"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:textColorHint="#999999"
                android:textColor="@color/principalTitleTextColor"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="6"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="@dimen/px_267"
                android:layout_height="@dimen/px_62"
                android:text="获取验证码"
                android:id="@+id/tv_code"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/zy_frame_btn"
                android:textColor="@color/btnTextColor"
                android:textSize="@dimen/px_text_32"
                android:gravity="center" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="新密码"
                android:id="@+id/textView11"
                android:textColor="@color/principalTitleTextColor"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_pwd"
                android:background="@null"
                android:layout_marginLeft="32dp"
                android:hint="请输入新密码"
                android:textColorHint="#999999"
                android:textColor="@color/principalTitleTextColor"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="11"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="确认密码"
                android:id="@+id/textView12"
                android:textColor="@color/principalTitleTextColor"
                android:textSize="18sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_pwd_ok"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:hint="请确认新密码"
                android:textColorHint="#999999"
                android:textColor="@color/principalTitleTextColor"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="11"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确 定 修 改"
            android:id="@+id/btn_confirm"
            android:textColor="@color/btnTextColor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/zy_frame_btn"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
