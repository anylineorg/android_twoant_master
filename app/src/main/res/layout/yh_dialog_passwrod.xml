<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBgColor"
    android:orientation="vertical">

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_close_password_dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yh_btn_press_transparent_grey"
            android:src="@drawable/ic_action_close" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/px_20"
            android:text="@string/payment_input_password"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="@dimen/px_text_28" />

    </android.support.v7.widget.ContentFrameLayout>

    <include layout="@layout/yh_view_divider_line" />

    <net.twoant.master.widget.SimpleOnlyShowPasswordView
        android:id="@+id/show_password_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/yh_bg_password_dialog" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_payment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/px_10"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="@dimen/px_text_24"
            tools:text="@string/payment_dialog_price_hint" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/px_20"
                android:paddingTop="@dimen/px_20"
                android:text="@string/payment_forget_password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/px_text_24" />

            <net.twoant.master.ui.main.widget.MarqueeTextView
                android:id="@+id/tv_payment_merchant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginStart="@dimen/px_20"
                android:gravity="end"
                android:textColor="@color/principalTitleTextColor"
                android:textSize="@dimen/px_text_26"
                tools:text="@string/payment_dialog_hint" />

        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <TableLayout
            android:id="@+id/tl_password_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:collapseColumns="3"
            android:divider="@drawable/yh_divider_line_vertical"
            android:showDividers="middle|beginning|end"
            android:stretchColumns="0,1,2">

            <TableRow
                android:divider="@drawable/yh_divider_line_horizontal"
                android:showDividers="middle">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_one"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_two"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_three"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

            </TableRow>


            <TableRow
                android:divider="@drawable/yh_divider_line_horizontal"
                android:showDividers="middle">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_four"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_five"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_six"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

            </TableRow>


            <TableRow
                android:divider="@drawable/yh_divider_line_horizontal"
                android:showDividers="middle">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_seven"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_eight"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_nine"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

            </TableRow>


            <TableRow
                android:divider="@drawable/yh_divider_line_horizontal"
                android:showDividers="middle">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grayBgPassword"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_zero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yh_btn_press_transparent_grey"
                    android:text="@string/payment_zero"
                    android:textColor="@color/principalTitleTextColor"
                    android:textSize="@dimen/px_text_42"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_number_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/yh_bg_pay_dialog_back" />

            </TableRow>
        </TableLayout>

        <android.support.v7.widget.ContentFrameLayout
            android:id="@+id/progress_bar_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteBgColor"
            android:visibility="gone">

            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/loading_progress_bar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </android.support.v7.widget.ContentFrameLayout>

    </android.support.v7.widget.ContentFrameLayout>

</android.support.v7.widget.LinearLayoutCompat>