<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_we_chat_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@drawable/yh_white_grey_bg_btn_press"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10"
            android:src="@drawable/umeng_socialize_wechat" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/payment_we_chat_pay"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="@dimen/px_text_28" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_we_chat_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="false" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_ali_pay_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@drawable/yh_white_grey_bg_btn_press"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10"
            android:src="@drawable/umeng_socialize_alipay" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/payment_ali_pay"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="@dimen/px_text_28" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rb_ali_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:checked="true"
            android:clickable="false" />

    </android.support.v7.widget.LinearLayoutCompat>

</merge>