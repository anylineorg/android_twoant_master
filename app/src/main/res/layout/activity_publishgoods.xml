<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGreyColor"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/btnTextColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/gray_arrow" />

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品发布"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/title_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/btnTextColor"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@drawable/border_b"
            android:layout_height="60dp">

            <TextView
                android:text="商品名称"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/textView4"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/principalTitleTextColor" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:textColor="@color/principalTitleTextColor"
                android:id="@+id/edit_product_name" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@drawable/border_b"
            android:layout_height="60dp">

            <TextView
                android:text="商品主图"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/principalTitleTextColor"
                android:id="@+id/textView177" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add"
                android:layout_gravity="center_vertical"
                android:id="@+id/edit_product_add" />
        </LinearLayout>


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/edit_product_shcouse"
            android:clickable="false"
            android:background="@drawable/border_b"
            android:layout_height="60dp">

            <TextView
                android:text="选择分类"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:id="@+id/edit_product_type1"
                android:textColor="@color/principalTitleTextColor" />

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:id="@+id/edit_product_type"
                android:layout_toRightOf="@+id/edit_product_type1"
                android:textColor="@color/principalTitleTextColor" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/huise_xiaojiantou"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@drawable/border_b"
            android:layout_height="60dp">

            <TextView
                android:text="商品价格"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/principalTitleTextColor" />
            <EditText
                android:layout_height="60dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:textColor="@color/principalTitleTextColor"
                android:id="@+id/edit_product_price" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@drawable/border_b"
            android:layout_height="60dp">
            <TextView
                android:text="商品库存"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/principalTitleTextColor" />
            <EditText
                android:layout_height="60dp"
                android:inputType="number"
                android:textColor="@color/principalTitleTextColor"
                android:layout_width="match_parent"
                android:id="@+id/edit_product_count" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@drawable/border_b"
            android:layout_height="60dp">
            <TextView
                android:text="商品亮点"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="18sp"
                android:textColor="@color/principalTitleTextColor" />

            <EditText
                android:layout_height="60dp"
                android:inputType="text"
                android:textColor="@color/principalTitleTextColor"
                android:layout_width="match_parent"
                android:id="@+id/edit_product_remark" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:inputType="text"
            android:background="@drawable/border_b"
            android:textColor="@color/principalTitleTextColor"
            android:ems="10"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:hint="请输入描述信息"
            android:textColorHighlight="@color/black"
            android:id="@+id/edit_product_disc" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@drawable/border_b"
            android:layout_height="60dp">

            <TextView
                android:text="添加图片"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/principalTitleTextColor"
                android:id="@+id/textView178" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
