<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_260"
    android:background="@color/whiteBgColor"
    xmlns:tool="http://schemas.android.com/tools">

    <ImageView
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginTop="@dimen/px_10"
        android:layout_width="@dimen/px_190"
        android:layout_height="@dimen/px_190"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:id="@+id/shop_icon"
        tool:background="@drawable/ease_default_avatar" />

    <LinearLayout
        android:layout_toRightOf="@id/shop_icon"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/px_8"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺"
            android:textSize="@dimen/px_text_32"
            android:id="@+id/shop_name"
            android:textColor="@color/principalTitleTextColor"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_50"
            tool:text="地址:某家家某水水水四大按时水是是是地谁"
            android:textSize="@dimen/px_text_25"
            android:maxLines="3"
            android:id="@+id/shop_address"
            android:textColor="@color/subordinationTitleTextColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-22-11 33：33：66"
            android:id="@+id/shop_time"
            android:textColor="@color/subordinationTitleTextColor"
            android:textSize="@dimen/px_text_26"
            android:layout_below="@+id/shop_name"
            android:layout_toRightOf="@+id/shop_icon"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_30"
        android:background="@drawable/ic_back_right" />
</RelativeLayout>
