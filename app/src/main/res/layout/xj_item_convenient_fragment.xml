<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/convenient_info_title"
                android:layout_width="@dimen/px_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/px_10"
                android:singleLine="true"
                android:text="的咖啡哈科技gals肌肤咖喱近代商法上了解到拉山口哈洛加斯拉萨jfk是个"
                android:textSize="@dimen/px_text_32"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/convenient_info_pub_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_10"
                android:text="个人发布"
                android:textColor="@color/red_f9"
                android:textSize="@dimen/px_text_20" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_40"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10">

            <TextView
                android:id="@+id/convenient_info_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="2017-11-11 11：30"
                android:textSize="@dimen/px_text_24" />

            <TextView
                android:id="@+id/convenient_info_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="阅览:9000次"
                android:textSize="@dimen/px_text_24" />

            <TextView
                android:id="@+id/convenient_info_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="ID:13666666"
                android:textSize="@dimen/px_text_24" />
        </RelativeLayout>

        <TextView
            android:id="@+id/convenient_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/px_8"
            android:maxLines="3"
            android:padding="@dimen/px_10"
            android:text="的拉哈拉哈 武器有人去屋怄气王瑞琪哦群殴若区容器柔情我哦亲微弱IQ无融券微弱秋容起舞容我入群我去热情哦我如群殴我拉斯杀了开发和ia'l'h'fi'la's'j撒dhl看良好的撒卡嘎手机发噶啦基地啊是符合"
            android:textSize="@dimen/px_text_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:scaleType="fitXY"
                android:src="@drawable/ic_def_large" />

            <ImageView
                android:id="@+id/iv_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_10"
                android:scaleType="fitXY"
                android:src="@drawable/ic_def_large" />

            <ImageView
                android:id="@+id/iv_info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="@dimen/px_10"
                android:paddingRight="@dimen/px_20"
                android:paddingTop="@dimen/px_10"
                android:scaleType="fitXY"
                android:src="@drawable/ic_def_large" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/px_20"
        android:text="没有数据"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_5"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:background="@color/dividerLineColor"></View>
</LinearLayout>