<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/lightGreyColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/btnTextColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/px_107"
            android:layout_height="@dimen/px_107"
            android:layout_alignParentLeft="true"
            android:src="@drawable/gray_arrow" />

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品评价"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="20sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/title_color"
            android:textSize="18sp" />
    </RelativeLayout>

   <!-- 标题end-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--第一行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_4"
                android:background="@color/btnTextColor"
                android:gravity="center"
                android:orientation="horizontal">
                <!--第一行第一个-->
                <LinearLayout
                    android:id="@+id/ll_shangpin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_230"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_product_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_1" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="商品"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />
                <!--第一行第二个-->
                <LinearLayout
                    android:id="@+id/ll_fenlei"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_4"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_classify_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_2"
                        android:background="@drawable/guanli_2"
                        android:focusable="false" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="分类"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />
                <!--第一行第三个-->
                <LinearLayout
                    android:id="@+id/ll_dingdan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_4"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_order_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_3" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="订单"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_28" />
                </LinearLayout>
            </LinearLayout>

            <!--第二行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_4"
                android:background="@color/btnTextColor"
                android:gravity="center"
                android:orientation="horizontal">
                <!--第二行第一个-->
                <LinearLayout
                    android:id="@+id/ll_huodong"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_230"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_activity_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_4" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="活动"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />

                <!--第二行第二个-->
                <LinearLayout
                    android:id="@+id/ll_guanliyuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_4"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_addmanager_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_5" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="管理员"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />
                <!--第二行第三个-->
                <LinearLayout
                    android:id="@+id/ll_caiwu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_4"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_finance_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_6" />

                    <TextView
                        android:id="@+id/textView80"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="财务"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>
            </LinearLayout>
            <!--第三行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_230"
                android:layout_marginTop="@dimen/px_4"
                android:background="@color/lightGreyColor"
                android:orientation="horizontal">
                <!--第三行第一个-->
                <LinearLayout
                    android:id="@+id/ll_xinxi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ll_shoukuan1"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_7" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="信息"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />
                <!--第三行第二个-->
                <LinearLayout
                    android:id="@+id/ll_renzheng"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_safe_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_8" />

                    <TextView
                        android:id="@+id/textView86"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="认证"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />
                <!--第三行第三个-->
                <LinearLayout
                    android:id="@+id/ll_shoukuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_2code_manager"
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/guanli_9" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="收款"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

            </LinearLayout>

            <!--第四行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_230"
                android:layout_marginTop="@dimen/px_4"
                android:background="@color/lightGreyColor"
                android:orientation="horizontal"
                android:weightSum="3">

                <!--第三行第一个-->
                <LinearLayout
                    android:id="@+id/ll_manage_member"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_manage_member" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="@string/merchant_manage_member"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />

                <!--第四行第二个-->
                <LinearLayout
                    android:id="@+id/ll_manage_vip_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_manage_vip_card" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="@string/merchant_manage_vip_card"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_4"
                    android:layout_height="@dimen/px_230"
                    android:background="@color/lightGreyColor" />

                <!--第四行第三个-->
                <LinearLayout
                    android:id="@+id/ll_manage_gift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/zy_selector_white_bg1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/px_90"
                        android:layout_height="@dimen/px_90"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_manage_gift" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/px_20"
                        android:gravity="center"
                        android:text="@string/merchant_manage_gift"
                        android:textColor="@color/principalTitleTextColor"
                        android:textSize="@dimen/px_text_30" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>


