<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yh_shape_loading_dialog"
        android:gravity="center"
        android:minHeight="60dp"
        android:minWidth="180dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/yh_loading_dialog_progressbar"
            android:visibility="visible" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_warm_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_hint_warm"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_loading_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="14sp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_close_dialog"
        android:layout_width="@dimen/px_60"
        android:layout_height="@dimen/px_60"
        android:layout_gravity="end"
        android:clickable="true"
        android:padding="@dimen/px_14"
        android:src="@drawable/ic_action_close" />

</android.support.v7.widget.ContentFrameLayout>