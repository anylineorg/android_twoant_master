<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigationTextColor">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_back_register"
                android:layout_width="@dimen/px_90"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/title_back_selector"
                android:src="@drawable/back" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="注册"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whiteBgColor"
                android:textSize="@dimen/px_text_45" />
        </RelativeLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:layout_marginTop="@dimen/px_40"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/principalTitleTextColor"
                android:textSize="@dimen/px_text_32" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_phone_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_72"
                android:layout_marginLeft="@dimen/px_32"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:text="13253871210"
                android:singleLine="true"
                android:textColor="@color/principalTitleTextColor"
                android:textColorHint="#999999"
                android:textSize="@dimen/px_text_28" />
        </android.support.v7.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:background="#dcdcdc" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:layout_marginTop="@dimen/px_27"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_code_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/principalTitleTextColor"
                android:textColorHint="#999999"
                android:textSize="@dimen/px_text_28" />

            <TextView
                android:id="@+id/tv_code_register"
                android:layout_width="@dimen/px_267"
                android:layout_height="@dimen/px_62"
                android:background="@drawable/frame_btn"
                android:text="获取验证码"
                android:textColor="@color/whiteBgColor"
                android:textSize="@dimen/px_text_32"
                android:gravity="center" />
        </android.support.v7.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:layout_marginTop="@dimen/px_14"
            android:background="#dcdcdc" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:layout_marginTop="@dimen/px_27"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/principalTitleTextColor"
                android:textSize="@dimen/px_text_32" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_password_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_72"
                android:layout_marginLeft="@dimen/px_20"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/principalTitleTextColor"
                android:textColorHint="#999999"
                android:textSize="@dimen/px_29" />
        </android.support.v7.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:background="#dcdcdc" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_71"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:layout_marginTop="@dimen/px_39"
            android:gravity="left|center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请人"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/principalTitleTextColor"
                android:textSize="@dimen/px_text_32" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_inivite_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入邀请人手机号，没有可不填"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/principalTitleTextColor"
                android:textColorHint="#999999"
                android:textSize="@dimen/px_text_28" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_invite_tips_register"
                android:layout_width="@dimen/px_62"
                android:layout_height="@dimen/px_62"
                android:src="@drawable/mark" />
        </android.support.v7.widget.LinearLayoutCompat>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:background="#dcdcdc" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:layout_marginTop="@dimen/px_36"
            android:background="@drawable/frame_btn"
            android:text="注    册"
            android:textColor="@color/whiteBgColor"
            android:textSize="@dimen/px_text_35" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_18"
            android:layout_marginRight="@dimen/px_18"
            android:layout_marginTop="@dimen/px_18"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView17"
                android:layout_marginLeft="@dimen/px_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即代表同意 《两只蚂蚁用户协议》"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#999999"
                android:textSize="@dimen/px_text_28" />

            <!--<android.support.v7.widget.AppCompatTextView-->
                <!--android:id="@+id/textView18"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="@dimen/px_18"-->
                <!--android:layout_marginLeft="@dimen/px_8"-->
                <!--android:text="《两只蚂蚁协议》"-->
                <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
                <!--android:textColor="#999999" />-->
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>