<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_width="match_parent"
        android:background="@color/light_white"
        android:layout_above="@+id/m_list_bt"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:id="@+id/m_list_bt"
        android:layout_width="match_parent"
        android:background="@color/whiteBgColor"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/m_list_car_lay"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="@dimen/px_4"
            android:layout_marginTop="@dimen/px_4"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/m_list_car"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_shopping_car"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_countcart_goodsdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/em_unread_count_bg"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/whiteBgColor"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/m_list_car"
                android:layout_alignRight="@+id/m_list_car" />
        </RelativeLayout>

        <TextView
            android:id="@+id/m_list_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_centerVertical="true"
            android:textColor="@color/title_color"
            android:text="￥0.00"/>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_toRightOf="@+id/m_listview"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:textColor="@color/color_898787"-->
        <!--android:text="另需服务费￥3"/>-->
        <Button android:id="@+id/m_list_submit"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:background="@color/light_white"
            android:text="结算"
            android:textColor="@color/whiteBgColor"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>