<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/btnTextColor"
    android:layout_height="@dimen/px_120">

    <ImageView
        android:id="@+id/iv_img_redpacketlist"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px_6"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_toRightOf="@id/iv_img_redpacketlist"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="@dimen/px_14"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mary蛋糕店"
                android:textColor="@color/text_black"
                android:textSize="@dimen/px_text_34"/>
            <TextView
                android:layout_marginTop="@dimen/px_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:text="使用期限2016.6.25-2016.12.30"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/px_150"
        android:layout_height="match_parent"
        android:background="@color/merchantHintTextColor">


    </LinearLayout>

</RelativeLayout>