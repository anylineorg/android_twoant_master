<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_watch_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yh_white_grey_bg_btn_press"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingEnd="@dimen/px_20"
    android:paddingLeft="@dimen/px_20"
    android:paddingRight="@dimen/px_20"
    android:paddingStart="@dimen/px_20"
    android:weightSum="1">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header_image"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginEnd="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:src="@drawable/ic_def_circle" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/px_10"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="@dimen/px_text_30"
            tools:text="昵称" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/px_10"
            android:textColor="@color/principalTitleTextColor"
            android:textSize="@dimen/px_text_24"
            tools:text="昵称" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_add_friend"
        android:layout_width="@dimen/px_130"
        android:layout_height="@dimen/px_80"
        android:background="@drawable/yh_btn_press_orange"
        android:gravity="center"
        android:text="@string/button_add"
        android:textColor="@color/whiteTextColor"
        android:textSize="@dimen/px_text_28" />

</android.support.v7.widget.LinearLayoutCompat>