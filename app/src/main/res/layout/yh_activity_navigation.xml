<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yh_activity_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.twoant.master.ui.other.activity.NavigationActivity">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/vp_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_skip"
        android:layout_width="@dimen/px_90"
        android:layout_height="@dimen/px_90"
        android:layout_gravity="end"
        android:layout_margin="@dimen/px_32"
        android:background="@android:color/transparent"
        android:text="@string/skip_navigation"
        android:textColor="@color/principalTitleTextColor"
        android:textSize="@dimen/px_text_26" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_enter"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/px_48"
        android:background="@drawable/yh_bg_color_primary_border"
        android:text="@string/enter_navigation"
        android:textColor="@color/principalTitleTextColor"
        android:textSize="@dimen/px_text_28" />

</merge>
