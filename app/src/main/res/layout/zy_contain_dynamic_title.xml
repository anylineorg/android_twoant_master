<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_back_goodsmanager"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="?attr/actionBarSize">
    <View
        android:id="@+id/toolbar_bg_merchant_home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@color/navigationTextColor" />
   <!-- <ImageView
        android:id="@+id/iv_back"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/zy_selector_white_bg"
        android:src="@drawable/gray_arrow" />-->
    <TextView
        android:padding="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_70"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友动态"
        android:textColor="@color/principalTitleTextColor"
        android:textSize="@dimen/px_text_32" />
    <TextView
        android:padding="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_70"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表"
        android:layout_alignParentRight="true"
        android:textColor="@color/principalTitleTextColor"
        android:textSize="@dimen/px_text_32" />
    <TextView
        android:id="@+id/tv_publish_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="发表"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/title_color"
        android:textSize="18sp" />
</RelativeLayout>
