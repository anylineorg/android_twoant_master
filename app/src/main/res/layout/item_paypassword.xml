<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_exit_dialog_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_close"
            android:paddingLeft="@dimen/px_20"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/px_20"
            android:textColor="@android:color/transparent"
            android:textSize="@dimen/px_text_40"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_bigtitle_paypassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center"
            android:padding="@dimen/px_10"
            android:text="支付密码"
            android:textColor="#000"
            android:textSize="@dimen/px_text_34" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_4"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title_paypassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_horizontal"
        android:textColor="@color/principalTitleTextColor"
        android:textSize="@dimen/px_text_32"
        tools:text="确认使用本活动足疗千元储值卡" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_money_paypassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_horizontal"
        android:textColor="@color/principalTitleTextColor"
        android:textSize="@dimen/px_text_60"
        tools:text="¥200" />

    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:layout_below="@+id/pay_title"
        android:layout_margin="@dimen/px_20"
        android:background="@drawable/sex_box_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/pay_box1"
                style="@style/InputTextView"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40"
                android:text="" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/px_2"
            android:layout_height="match_parent"
            android:background="@drawable/sex_boxline_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/pay_box2"
                style="@style/InputTextView"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/px_2"
            android:layout_height="match_parent"
            android:background="@drawable/sex_boxline_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/pay_box3"
                style="@style/InputTextView"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/px_2"
            android:layout_height="match_parent"
            android:background="@drawable/sex_boxline_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/pay_box4"
                style="@style/InputTextView"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40"
                android:text="" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/px_2"
            android:layout_height="match_parent"
            android:background="@drawable/sex_boxline_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/pay_box5"
                style="@style/InputTextView"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/px_2"
            android:layout_height="match_parent"
            android:background="@drawable/sex_boxline_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/pay_box6"
                style="@style/InputTextView"
                android:layout_width="@dimen/px_40"
                android:layout_height="@dimen/px_40" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:layout_below="@id/aa">

        <TextView
            android:id="@+id/tv_forget_paypassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_10"
            android:padding="@dimen/px_10"
            android:text="忘记密码?"
            android:textColor="@color/title_color"
            android:textSize="@dimen/px_text_24" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_400"
        android:layout_alignParentBottom="true"
        android:background="#CFCFCF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/px_2"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                android:textSize="@dimen/px_text_46" />

            <TextView
                android:id="@+id/pay_keyboard_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_marginLeft="@dimen/px_2"
                android:layout_marginRight="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="2"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />

            <TextView
                android:id="@+id/pay_keyboard_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="3"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="4"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />

            <TextView
                android:id="@+id/pay_keyboard_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_marginLeft="@dimen/px_2"
                android:layout_marginRight="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="5"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />

            <TextView
                android:id="@+id/pay_keyboard_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="6"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="7"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />

            <TextView
                android:id="@+id/pay_keyboard_eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_marginLeft="@dimen/px_2"
                android:layout_marginRight="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="8"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />

            <TextView
                android:id="@+id/pay_keyboard_nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/px_2"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="9"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_keyboard_space"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#C0C4C7"
                android:clickable="false"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />

            <TextView
                android:id="@+id/pay_keyboard_zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_gride"
                android:gravity="center"
                android:text="0"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />

            <ImageView
                android:id="@+id/pay_keyboard_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/face_del_icon"
                android:textColor="#000"
                android:textSize="@dimen/px_text_45" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_above="@+id/keyboard"
        android:layout_alignParentLeft="true"
        android:background="#C0C4C7" />

</LinearLayout>
