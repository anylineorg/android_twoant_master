<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/yh_white_bg_arc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_content_canceldialog"
            android:padding="@dimen/px_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_text_32"
            android:gravity="center"
            android:textColor="@color/principalTitleTextColor"
            android:text="取消订单"/>
    </LinearLayout>
    <View
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/px_80">
        <Button
            android:id="@+id/tv_canel_closeactivity"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/zy_selector_bg"
            android:textSize="@dimen/px_text_32"
            android:text="取消"/>
        <View
            android:background="@color/backgroundColor"
            android:layout_width="@dimen/px_4"
            android:layout_height="match_parent"/>
        <Button
            android:background="@drawable/zy_selector_bg"
            android:id="@+id/tv_enter_closeactivity"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_text_32"
            android:text="确定"/>
    </LinearLayout>

    <View
        android:background="@color/backgroundColor"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:layout_height="@dimen/px_1"/>
</LinearLayout>